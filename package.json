{
  "name": "tiktok-chat-reader",
  "version": "2.0.0",
  "description": "TikTok LIVE Chat Reader with Clean Architecture",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p backend/tsconfig.json",
    "start": "node dist/main.js",
    "dev": "ts-node -r tsconfig-paths/register -P backend/tsconfig.json backend/main.ts",
    "dev:watch": "nodemon --exec 'ts-node -r tsconfig-paths/register -P backend/tsconfig.json' backend/main.ts",
    "lint": "eslint backend/**/*.ts",
    "lint:fix": "eslint backend/**/*.ts --fix",
    "clean": "rm -rf dist",
    "build:exe": "bash build-exe-pkg-ts.sh",
    "electron:build-ts": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run build && npm run electron:build-ts && electron dist-electron/main.js",
    "electron:dist": "bash build-exe-electron.sh",
    "test": "jest -c backend/jest.config.js",
    "test:watch": "jest -c backend/jest.config.js --watch",
    "test:coverage": "jest -c backend/jest.config.js --coverage",
    "test:ci": "jest -c backend/jest.config.js --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@types/ws": "^8.18.1",
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "socket.io": "^4.4.1",
    "tiktok-live-connector": "^2.1.1-beta1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "electron": "^33.4.11",
    "electron-builder": "^25.1.8",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.7.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
