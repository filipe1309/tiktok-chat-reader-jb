{
  "name": "tiktok-chat-reader-backend",
  "version": "2.0.0",
  "description": "TikTok LIVE Chat Reader Backend - Node.js + TypeScript with Clean Architecture",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "dev": "ts-node -r tsconfig-paths/register main.ts",
    "dev:watch": "nodemon --exec 'ts-node -r tsconfig-paths/register' main.ts",
    "lint": "eslint '**/*.ts'",
    "lint:fix": "eslint '**/*.ts' --fix",
    "clean": "rm -rf dist",
    "test": "jest -c jest.config.js",
    "test:watch": "jest -c jest.config.js --watch",
    "test:coverage": "jest -c jest.config.js --coverage",
    "test:ci": "jest -c jest.config.js --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.2",
    "socket.io": "^4.4.1",
    "tiktok-live-connector": "^2.1.1-beta1",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.7.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
